#!/bin/bash

usage() { echo "Usage: $0 [-s <start line>] [-e <end line>]" 1>&2; exit 1; }

while getopts ":s:e:" o; do
    case "${o}" in
        s)
            s=${OPTARG}
            ;;
        p)
            e=${OPTARG}
            ;;
        *)
            usage
            ;;
    esac
done
shift $((OPTIND-1))

if [ -z "${s}" ] || [ -z "${e}" ]; then
    usage
fi

echo "s = ${s}"
echo "e = ${e}"
